{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "q",
      "selenium-webdriver",
      "jquery",
      "hammerjs",
      "jasmine",
      "jquery.base64"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./index.ts",
    "./assets.ts",
    "./typings.ts",
    "./polyfills.ts"

  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
